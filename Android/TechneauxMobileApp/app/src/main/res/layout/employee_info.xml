<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#161616">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Error: Not Set"
    android:id="@+id/companynameLoggedIn"
    android:layout_below="@+id/imageView4"
    android:layout_centerHorizontal="true"
    android:textColor="#606060"
    android:gravity="center"/>

    //First Name
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/firstname"
        android:layout_marginTop="40dp"
        android:hint="Your First Name"
        android:layout_below="@+id/companynameLoggedIn"
        android:layout_centerHorizontal="true"
        android:maxLength="32"
        android:singleLine="true"
        android:textColorHint="#707070"
        android:textColor="#aaaaaa"/>

    //Last Name
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lastname"
        android:hint="Your Last Name"
        android:layout_below="@+id/firstname"
        android:layout_alignLeft="@+id/firstname"
        android:layout_alignStart="@+id/firstname"
        android:maxLength="32"
        android:singleLine="true"
        android:textColorHint="#707070"
        android:textColor="#aaaaaa"/>

    //Phone Number
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/Phone"
        android:hint="Your Phone Number"
        android:layout_below="@+id/lastname"
        android:layout_alignLeft="@+id/lastname"
        android:layout_alignStart="@+id/lastname"
        android:maxLength="10"
        android:singleLine="true"
        android:textColorHint="#707070"
        android:textColor="#aaaaaa"/>

    //E-mail address
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailaddress"
        android:hint="Your Email Address"
        android:layout_below="@+id/Phone"
        android:layout_alignLeft="@+id/Phone"
        android:layout_alignStart="@+id/Phone"
        android:maxLength="64"
        android:singleLine="true"
        android:textColorHint="#707070"
        android:textColor="#aaaaaa"/>

    //Submit Button
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:id="@+id/verifyButton"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/emailaddress"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:background="#F95E07"
        />
    //Progress Bar
    <ProgressBar
        android:id="@+id/employeeProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/Phone"
        android:layout_centerHorizontal="true" />
    // Error Message
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/employeeError"
        android:layout_below="@+id/emailaddress"
        android:layout_centerHorizontal="true"
        android:textColor="#EC462B" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/techneauxlogo"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
